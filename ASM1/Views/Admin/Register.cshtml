@model ASM.Controllers.UserController.CreateViewModel

@{
    ViewData["Title"] = "MyAccount";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}
@if (ViewBag.AlertMessage != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @ViewBag.AlertMessage
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<h1 class="text-center">Create Account With Admin Colo Shop </h1>
<p class="text-center text-danger">Hãy Liên hệ chủ của hàng để lấy ID</p>
<p class="text-center text-danger">Email : thaibdtg16@gmail.com</p>
<form method="post" enctype="multipart/form-data">
    <label>
        <p class="label-txt">ENTER YOUR ID</p>
        <input type="text" class="input form-control" asp-for="User.RoleId">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR USER NAME</p>
        <input type="text" class="input form-control" asp-for="User.Username">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR NAME</p>
        <input type="text" class="input form-control" asp-for="User.Name">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR EMAIL</p>
        <input type="text" class="input form-control" asp-for="User.Email">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR NUMBER PHONE</p>
        <input type="text" class="input form-control" asp-for="User.NumberPhone">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <p class="label-txt">ENTER YOUR PASSWORD</p>
        <input type="text" class="input form-control" asp-for="User.Password">
        <div class="line-box">
            <div class="line"></div>
        </div>
    </label>
    <label>
        <input type="text" class="input form-control" asp-for="User.Status" hidden value="1">
    </label>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>
<style>
    form {
        -webkit-box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.1);
        background: #efefef;
        box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.1);
        margin: 60px auto;
        padding: 60px 120px 80px 120px;
        text-align: center;
        width: 60%;
    }

    label {
        display: block;
        margin: 40px 0px;
        position: relative;
    }

    .label-txt {
        color: rgb(120, 120, 120);
        font-family: sans-serif;
        font-size: .8em;
        letter-spacing: 1px;
        padding: 10px;
        position: absolute;
        top: -1.6em;
        transition: ease .3s;
    }

    .input {
        background: transparent;
        border: none;
        outline: none;
        padding: 10px;
        width: 100%;
    }

    .line-box {
        background: #BCBCBC;
        height: 2px;
        position: relative;
        width: 100%;
    }

    .line {
        background: #8BC34A;
        height: 2px;
        left: 50%;
        position: absolute;
        top: 0px;
        transform: translateX(-50%);
        transition: ease .6s;
        width: 0%;
    }

    .input:focus + .line-box .line { width: 100%; }

    .label-active { top: -3em; }

    button {
        background: rgb(220, 220, 220);
        border: none;
        border-radius: 3px;
        color: rgb(120, 120, 120);
        cursor: pointer;
        display: inline-block;
        font-weight: bold;
        outline: none;
        padding: 12px 24px;
        transition: ease .3s;
    }

    button:hover {
        background: #8BC34A;
        color: #ffffff;
    }

</style>
<script>
    $(document).ready(function () {

        $('.input').focus(function () {
            $(this).parent().find(".label-txt").addClass('label-active');
        });

        $(".input").focusout(function () {
            if ($(this).val() == '') {
                $(this).parent().find(".label-txt").removeClass('label-active');
            };
        });

    });
</script>